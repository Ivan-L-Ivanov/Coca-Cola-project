<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BarCrawlers</title>
    <style type="text/css">
        body {
            background-image: url("/img/BarBackground.jpg");
            background-size: auto;
        }

        div {
            color: white;
        }

        btn-primary {
            background-color: green;
        }

        table {
            background-color: white;
        }

            table.row {
                cursor: pointer;
            }
    </style>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="row">
        @*<div class="container">*@
        <div class="col-sm-2" role="complementary">
            <nav class="float-left">
                <div>
                    <a href="/">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <img src="/img/siluet.jpg" width="150" height="150">
                        }
                        else
                        {
                            <img src="/img/siluet.jpg" width="150" height="150">
                        }
                    </a>
                </div>
                <br>
                <ul class="nav flex-column">
                    <partial name="_LoginPartial" />
                </ul>
                @if (User.IsInRole("Magician"))
                {
                    <a class="nav-link btn btn-primary" asp-area="Magician" asp-controller="User" asp-action="Index"> Users Actions</a>
                    <a class="nav-link btn btn-primary" asp-area="Magician" asp-controller="Ingredients" asp-action="Index"> Ingredients</a>

                }

                <a class="nav-link btn btn-primary" asp-area="" asp-controller="Cocktails" asp-action="Index"> Cocktails</a>
                <a class="nav-link btn btn-primary" asp-area="" asp-controller="Bars" asp-action="Index">Bars</a>

            </nav>
        </div>
        <div class="col-10" role="main">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        @*</div>*@
    </div>
